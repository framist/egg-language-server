{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},

		{
			"label": "Build Server",
			"group": "build",
			"type": "shell",
			"command": "cargo build",
			"problemMatcher": "$rustc"
		},
		// 联合调试
		{
			"label": "Build Server and Extension",
			"dependsOn": [
				"Build Server",
				"Build Extension"
			],
			"problemMatcher": "$rustc"
		}
	]
}